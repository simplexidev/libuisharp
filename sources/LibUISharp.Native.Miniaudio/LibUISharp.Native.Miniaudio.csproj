<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="16.0" InitialTargets="GenerateLibUISharpVersion" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<DefineConstants>$(DefineConstants);LIBUISHARP_NATIVE_MINIAUDIO</DefineConstants>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>
	<ItemGroup>
		<Content Include="lib\linux-x64\miniaudio.so">
			<PackagePath>runtimes\linux-x64\miniaudio.so</PackagePath>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
		</Content>
		<!--
		<Content Include="lib\freebsd-x64\miniaudio.so.2">
			<PackagePath>runtimes\freebsd-x64\miniaudio.so</PackagePath>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
		</Content>
		-->
		<Content Include="lib\osx-x64\miniaudio.dylib">
			<PackagePath>runtimes\osx-x64\miniaudio.dylib</PackagePath>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
		</Content>
		<Content Include="lib\win-x64\miniaudio.dll">
			<PackagePath>runtimes\win-x64\minaudio.dll</PackagePath>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
		</Content>
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\LibUISharp.Core\LibUISharp.Core.csproj" />
	</ItemGroup>
</Project>